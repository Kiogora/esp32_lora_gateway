menu "GSM PIN AND UART PERIPHERAL SELECTION"

config GSM_TX
    int "UART Output to GSM Module"
    default 17
    range 1 38
    help
	UART TX pin, connected to GSM Module RX pin.

config GSM_RX
    int "UART Input from GSM Module"
    default 14
    range 1 38
    help
	UART RX pin, connected to GSM Module TX pin.

config GSM_PWR_KEY
    int "Power key pin output"
    default 18
    range 1 38
    help
	PWR KEY pin, connected to GSM Module pwr key.

config GSM_UART_NUM
    int "GSM UART peripheral number"
    default 1
    range 1 2
    help
	UART peripheral in use by the GPS. Should be 1 or 2. 0 is used for USB/UART download.

endmenu

menu "GSM PPPoS CONFIGURATION"

config GSM_DEBUG
    bool "Enable GSM debugging"
    default y
    help
        Show GSM debug messages

config GSM_BDRATE
    int "UART Baud rate"
    default 115200
    help
	UART baudrate to comunicate with GSM module


config GSM_INTERNET_USER
    string "Internet User"
	default "saf"
	help
		Network provider internet user.

config GSM_INTERNET_PASSWORD
    string "Internet password"
	default "data"
	help
		Network provider internet password
		
config GSM_APN
    string "Internet APN"
    default "safaricom"
    help
       Network provider's APN for internet access

endmenu

